<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task 1</title>
</head>

<body>
    <h3>Task 1</h3>

    <p id="output"></p>

    <script>

        var array = [];

        do {

        let input_number = prompt("Enter a number:");

        if (input_number == "0" || input_number === "" || input_number === null || !isFinite(input_number))
        {
            break;}

        array.push(+input_number);

        }while(true)

        let sum = 0;
        for (let num of array) {
        sum += num;
        }
        
        document.getElementById("output").innerHTML = sum;

    </script>
</body>
</html>
